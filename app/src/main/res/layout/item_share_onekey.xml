<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_share_menu"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingStart="@dimen/margin_20"
    android:paddingTop="@dimen/margin_20"
    android:paddingEnd="@dimen/margin_20"
    android:paddingBottom="@dimen/margin_20">

    <LinearLayout
        android:id="@+id/ll_one_key_share"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_45"
        android:layout_weight="1"
        android:background="@drawable/shape_one_key_share"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_one_key_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/share_menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_7"
            android:layout_marginLeft="@dimen/margin_7"
            android:text="@string/str_one_key_share"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_screenshot_share"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_45"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_weight="1"
        android:background="@drawable/shape_screenshot_share"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_jie_tu_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/share_screenshot" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_7"
            android:layout_marginLeft="@dimen/margin_7"
            android:text="@string/str_screenshot_share"
            android:textColor="@color/colorMainTab"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

</LinearLayout>